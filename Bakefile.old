p:insert_head() {
  sed '/<head>/a\'"$(p:generate_head "$1")"
}

p:generate_head() {
  export LAST_MODIFIED="$(TZ=GMT date -d "$1" +"%a, %d %b %Y %T")"
  cat templates/HEAD.html | envsubst | p:escape_xml
}

p:build_assets() {
  echo "Building assets"

  find "$SRC" -type f \( -iname "*.jpg" -o -iname "*.png" -o -iname "*.jpeg" \) -printf "%P\n" | xargs -I {} optim "$SRC/{}" "$DIST/{}"
}

p:generate_sitemap() {
  echo "Generating sitemap"

  local sitemap="$DIST/sitemap.xml"

  echo '<?xml version="1.0" encoding="UTF-8"?>' > "$sitemap"
  echo '<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">' >> "$sitemap"

  # TODO(robin): sort by last modified
  find "$DIST" -type f -name "*.html" | sort -rn | while read -r path; do
      local lastmod="$(date -r "$path" -u +"%Y-%m-%dT%H:%M:%SZ")"
      local path=$(realpath --relative-to="$DIST" "$path" | p:url_encode)
      echo "<url><loc>https://$DOMAIN/${path%index}</loc><lastmod>$lastmod</lastmod></url>" >> "$sitemap"
  done

  echo '</urlset>' >> "$sitemap"
}

p:generate_feeds() {
  local TITLE="lil notes"
  local DESCRIPTION="Thoughts and opinions of a teenager from the Netherlands."
  local AUTHOR="Robin (axcelott)"
  local LANGUAGE="en"
  local FOOTER="Made with â™¡ in the Netherlands. Copying is an act of love. Please copy."
  local EMAIL="webmaster@roblog.nl"

  p:generate_rss "$TITLE" "$DESCRIPTION" "$AUTHOR" "$LANGUAGE" "$FOOTER" "$EMAIL"
  p:generate_atom "$TITLE" "$DESCRIPTION" "$AUTHOR" "$LANGUAGE" "$FOOTER" "$EMAIL"
}

p:generate_rss() {
  echo "Generating RSS feed"

  local self="index.xml"
  local feed="$DIST/$self"
  local last_updated="$(p:last_updated)"

  echo '<?xml version="1.0" encoding="utf-8" standalone="yes"?>' > "$feed"
  echo '<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">' >> "$feed"
  echo '<channel>' >> "$feed"

  local header="$(cat <<EOF
<title>$1</title>
<description>$2</description>
<link>https://$DOMAIN</link>
<language>$4</language>
<webMaster>$6 ($3)</webMaster>
<copyright>$5</copyright>
<lastBuildDate>$(date -d "$last_updated" +"%a, %d %b %Y") 12:00:00 +0100</lastBuildDate>
<atom:link href="https://$DOMAIN/$self" rel="self" type="application/rss+xml" />
EOF
)"

  echo "$header" >> "$feed"

  p:list_posts | while read -r path; do
    local C="$(cat "$path")"
    local TITLE="$(echo "$C" | pup article h1 text{})"
    local DATE="$(echo "$C" | pup article footer time attr{datetime})"
    local CANONICAL="$(echo "$C" | pup link[rel="canonical"] attr{href})"
    local CONTENT="$(echo "$C" | pup article)"

    local post="$(cat <<EOF
<item>
  <title>$TITLE</title>
  <link>$CANONICAL</link>
  <pubDate>$(date -d "$DATE" +"%d %b %Y") 12:00:00 +0100</pubDate>
  <guid>$CANONICAL</guid>
  <description>
    <![CDATA[
    $CONTENT
    ]]>
  </description>
</item>
EOF
)"

    echo "$post" >> "$feed"
  done
  
  echo '</channel>' >> "$feed"
  echo '</rss>' >> "$feed"

  # Set the last modified date of the feed to the publicatiom
  # date of the newest post.
  touch -d "$last_updated" "$feed"
}

p:generate_atom() {
  echo "Generating Atom feed"

  local self="atom.xml"
  local feed="$DIST/$self"
  local last_updated="$(p:last_updated)"

  echo '<?xml version="1.0" encoding="utf-8" standalone="yes"?>' > "$feed"
  echo '<feed xmlns="http://www.w3.org/2005/Atom">' >> "$feed"

  local header="$(cat <<EOF
<title>$1</title>
<subtitle>$2</subtitle>
<id>https://$DOMAIN/</id>
<link href="https://$DOMAIN/" />
<updated>$(date -d "$last_updated" +"%Y-%m-%d")T12:00:00+01:00</updated>
<author>
    <name>$3</name>
    <email>$6</email>
  </author>
<rights>$5</rights>
<link href="https://$DOMAIN/$self" rel="self" type="application/atom+xml" />
EOF
)"

  echo "$header" >> "$feed"

  p:list_posts | while read -r path; do
    local C="$(cat "$path")"
    local TITLE="$(echo "$C" | pup article h1 text{})"
    local DATE="$(echo "$C" | pup article footer time attr{datetime})"
    local CANONICAL="$(echo "$C" | pup link[rel="canonical"] attr{href})"
    local CONTENT="$(echo "$C" | pup article)"

    local post="$(cat <<EOF
<entry>
  <title>$TITLE</title>
  <link href="$CANONICAL" />
  <published>$(date -d "$DATE" +"%Y-%m-%d")T12:00:00+01:00</published>
  <id>$CANONICAL</id>
  <content type="html">
    <![CDATA[
    $CONTENT
    ]]>
  </content>
</entry>
EOF
)"

    echo "$post" >> "$feed"
  done
  
  echo '</feed>' >> "$feed"

  # Set the last modified date of the feed to the publicatiom
  # date of the newest post.
  touch -d "$last_updated" "$feed"
}

p:list_posts() {
  p:posts_by_date | cut -d ' ' -f2-
}

p:last_updated() {
  p:posts_by_date | cut -d ' ' -f1 | head -n 1
}

p:posts_by_date() {
  # Lists blog posts sorted by publication date.
  export -f p:get_pubdate
  find "$DIST/blog" -type f -name "*.html" -not -name 'index.html' | xargs -d '\n' -I {} bash -c 'p:get_pubdate "{}"' | sort -rn
}

p:get_pubdate() {
  local dt="$(cat "$1" | pup article footer time attr{datetime})"
  echo "$dt $1"
}

